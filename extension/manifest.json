{
  "manifest_version": 3,
  "name": "Deskbird MCP Credentials Helper",
  "version": "1.0.0",
  "description": "Easily extract credentials for the Deskbird MCP Server",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://app.deskbird.com/*",
    "https://*.deskbird.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
